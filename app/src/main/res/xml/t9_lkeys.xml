<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:verticalGap="0dp"
    android:keyHeight="60dp"
    android:horizontalGap="0dp"
    android:keyWidth="25%p"

    >
    <Row>
        <!--NECESARIO-->
        <Key android:codes="-1" android:keyIcon="@drawable/sym_keyboard_shift"
            android:isModifier="true"
            android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="abc"></Key>
        <Key android:codes="51" android:keyLabel="def"></Key>
        <!--NECESARIO-->
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_delete"
            android:keyEdgeFlags="right"
            android:isRepeatable="true"/>
    </Row>
    <Row>
        <Key android:codes="52" android:keyLabel="ghi" android:keyEdgeFlags="left"></Key>
        <Key android:codes="53" android:keyLabel="jkl"></Key>
        <Key android:codes="54" android:keyLabel="lmno" android:keyEdgeFlags="right"></Key>
        <Key android:codes="-3" android:keyLabel="DONE" android:keyHeight="50%p" android:keyEdgeFlags="right"></Key>
    </Row>
    <Row>
        <Key android:codes="55" android:keyLabel="pqrs" android:keyEdgeFlags="left"></Key>
        <Key android:codes="56" android:keyLabel="tuv"></Key>
        <Key android:codes="57" android:keyLabel="wxyz" android:keyEdgeFlags="right"></Key>
    </Row>
    <Row>
        <Key android:codes="48" android:keyLabel="__" android:keyWidth="50%p" android:keyEdgeFlags="left"></Key>
        <!--NECESARIO-->
        <Key android:codes="-101"
            android:keyWidth="1%p"/>
        <!--NECESARIO-->
        <Key android:codes="-2" android:keyLabel="123" android:keyWidth="50%p" android:keyEdgeFlags="right"></Key>//LONG PRESS to switch to numbers
    </Row>
    <!-- ASCII ALPHABET : http://www.kerryr.net/pioneers/ascii2.htm -->
</Keyboard>